<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <h1 class="mt-3 mb-5 text-center">Url Shortener</h1>
    <h1 class="mb-5 text-center"><i class="fas fa-link fa-3x"></i></h1>
  </div>

  {{#if shortUrl}}
  <h2 class="mt-5 text-center">Success! Please use this link:</h2>
  <a class="text-center" href="{{shortUrl}}">{{shortUrl}}</a>
  {{else}}
  <form action="/shortUrl" method="POST">
    <div class="form-group">
      <label for="originalUrl"></label>
      <input type="text" class="form-control mb-4" name="originalUrl" id="originalUrl" placeholder=" Input URL here">
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-outline-primary px-5">Shorten</button>
    </div>
  </form>
  {{/if}}
</div>