<div class="container">
  <div class="d-flex flex-column justify-content-center">
    <a href="/" style="text-decoration:none; color:black;">
      <h1 class="mt-3 mb-5 text-center">URL Shortener</h1>
    </a>
    <h1 class="mb-5 text-center"><i class="fas fa-link fa-3x"></i></h1>
  </div>

  {{#if shortUrl}}
  <h2 class="mt-5 text-center">Success! Please use this link:</h2>
  <div class="mt-3 text-center">
    <a href="{{shortUrl}}" class="text-center" id="shortUrl">{{shortUrl}}</a>
    <input type="hidden" id="copyUrl" value={{shortUrl}}>
  </div>
  <div class="mt-3 text-center">
    <button class="btn btn-primary" id="copyBtn">Copy</button>
  </div>
  {{else}}
  <h2 style="color:brown;">{{error}}</h2>
  <form action="/shortUrl" method="POST">
    <div class="form-group">
      <label for="originalUrl"></label>
      <input type="text" class="form-control mb-4" name="originalUrl" id="originalUrl" placeholder=" Input URL here"
        value="{{originalUrl}}">
    </div>
    <div class=" d-flex justify-content-center">
      <button type="submit" class="btn btn-outline-primary px-5">Shorten</button>
    </div>
  </form>
  {{/if}}
</div>